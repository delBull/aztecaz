{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "DATABASE_URL",
        "NEXT_PUBLIC_TEMPLATE_CLIENT_ID",
        "THIRDWEB_SECRET_KEY",
        "Replicate_API_TOKEN",
        "OPENAI_API_KEY",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "CRON_SECRET"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}